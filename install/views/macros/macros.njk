{%- macro css(s) -%}
  <link id="bsTheme" rel="stylesheet" href="/public/assets/css/{{s}}.css">
{%- endmacro -%}

{%- macro js(s) -%}
  <script src="/public/assets/js/{{s}}.js"></script>
{%- endmacro -%}
{%- macro cssT(s) -%}
  <link rel="stylesheet" href="/install/css/{{s}}.css">
{%- endmacro -%}
{%- macro jsT(s) -%}
  <script src="/install/js/{{s}}.js"></script>
{%- endmacro -%}

{%- macro btn(i,e) -%}
  <button type="button" class="btn btn-outline-primary" id="{{i}}">{{e}}</button>
{%- endmacro -%}

{%- macro fg(i,e,x) -%}
<div class="form-group {{e}}">
  <label>{{i|startCase}}</label>
  <input type="text" class="form-control" id="{{i}}" placeholder="{{x}} {{i|startCase}}">
  <small class="form-text"></small>
</div>
{%- endmacro -%}

{%- macro input(i,e,x) -%}
<div class="col-md-6">
  <div class="form-group">
    <label>{{i}}</label>
    <input type="text" class="form-control" id="opi{{i}}" value="{{e}}">
    <small class="form-text">{{x}}</small>
  </div>
</div>
{%- endmacro -%}

{%- macro select(a,b,c,d,e) -%}
<div class="col-md-6">
  <div class="form-group">
  <label>{{a|startCase}}</label>
  <select class="custom-select" id="op{{a}}">
    {% if e %}
      {% for item in e %}
        <option value="{{item}}">{{item|startCase}}</option>
      {% endfor %}
    {% else %}
      <option value="{{b}}" selected>{{b}}</option>
      <option value="{{c}}">{{c}}</option>
    {% endif %}
  </select>
  <small class="form-text">{{d}}</small>
  </div>
</div>
{%- endmacro -%}
