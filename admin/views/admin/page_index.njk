{% extends './layout.njk' %}
{% block main %}
{{macro.breadcrumb(i=title)}}
{{macro.heading(i="Page List")}}
<table class="table table-hover table-striped">
    <tr>
      {% for e in items.admin.page.add.th %}
        {{macro.th(i=e)}}
      {% endfor %}
    </tr>
    {% for i in contents %}
    <tr>
        <td>{{ i.title }}</td>
        <td>{{ i.addTime.toString() | date }}</td>
        <td>{{ i.views }}</td>
        {{macro.optBtns(x="edit",a="page",b=i._id.toString())}}
    </tr>
    {% else %}
    <tr>currently no data</tr>
    {% endfor %}
</table>
{{macro.paginate(c=count,l=limit,pgs=pages,pg=page,a=admin,pgM=page-1,pgP=page+1)}}
{% endblock %}
{% block script %}
<script>
deleteIndex("content")
</script>
{% endblock %}
