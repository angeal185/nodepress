{% extends './layout.njk' %}
{% block main %}
<section id="gallery">
  <div class="container">
    <div id="image-gallery">
      <div class="row">

        {% for i in data.gallery %}
        <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12 image">
          <div class="img-wrapper">
            <a href="{{i.url}}"><img src="{{i.url}}" class="img-responsive"></a>
            <div class="img-overlay">
              <i class="fa fa-plus-circle" aria-hidden="true"></i>
            </div>
          </div>
          <span class="imgTitle" hidden>{{i.title}}</span>
          <span class="imgSub" hidden>{{i.sub}}</span>
        </div>
        {% endfor %}

      </div>
    </div>
  </div>
</section>
{% endblock %}

{% block script %}
<script>
var gal = {{data.gallery|dump|safe}}
console.log(gal)
// Gallery image hover
initGal()
</script>
{% endblock %}
