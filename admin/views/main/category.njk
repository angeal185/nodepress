{% extends './layout.njk' %}
{% block main %}
<div class="row">
  {{macro.sideBar(a=data)}}
  <div id="main" class="col-md-8">
    <h3>{{title|capitalize}}: {{category}}</h3>
  {{macro.post(a=data)}}
  </div>
</div>
{% endblock %}
{% block script %}
<script>
var catlist = {{data.catList|dump|safe}};
var taglist = {{data.tagList|dump|safe}};
tagCat(catlist,'cat')
tagCat(taglist,'tag')
tagCatEnable();
</script>
{% endblock %}
