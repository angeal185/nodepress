{% import "./macros/addons.njk" as addon %}
<!DOCTYPE HTML>
<html>
<head>
    <meta name="keywords" content="">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="/public/images/favicon.ico" />
    {% for i in config.styles %}
      {{macro.css(s=i)}}
    {% endfor %}
    {% block style %}{% endblock %}
</head>
<body>
  {{macro.head(nav=nav,data=data)}}
  <div id="wrapper">
      {% block main %}{% endblock %}
  </div>
  {{macro.footer()}}
  <div class="shade"></div>
  {% for i in config.scripts %}
    {{macro.js(s=i)}}
  {% endfor %}
  {% block scripts %}{% endblock %}
  {{macro.js(s="main")}}
  {% block script %}{% endblock %}
</body>
</html>
